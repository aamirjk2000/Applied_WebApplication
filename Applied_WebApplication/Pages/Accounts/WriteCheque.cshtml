</div>

<!-- START ERROR AREA-->
@if (Model.variables.ErrorArea)
{
    <div class="container mt-2 mb-2 align-content-center bg-info ">
        @foreach (Message Errormsg in Model.ErrorMessages)
        {
            <div style="padding: 5px;"> @Errormsg.message   </div>
        }
    </div>
}

<!-- END ERROR AREA -->
