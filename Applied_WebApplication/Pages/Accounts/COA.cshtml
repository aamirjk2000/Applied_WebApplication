@page
@using System.Data
@model Applied_WebApplication.Pages.Accounts.COAModel
@{
}

<div class="card bg-warning text-white">
    <div class="card-body">CHART OF ACCOUNT</div>
</div>
<br />

<form method="post">

    <input class="btn btn-primary" type="submit" value="Submit">

    <br />

    <table class="table">
        <thead>
            <tr>
                <th>
                    <a >
                        Code
                    </a>
                </th>
                <th>
                    Title
                    </a>
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (DataRow item in Model.COA.MyDataTable.Rows)
            {
                <tr>
                    <td>
                        @item["ID"]
                        
                    </td>
                    <td>
                        @item["Title"]
                    </td>
                    <td>
                        <a asp-page="./COA_Edit" asp-route-id="@item["ID"]">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item["ID"]">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item["ID"]">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>



    
</form>