@page
@using System.Data
@model Applied_WebApplication.Pages.Accounts.COAModel
@{
}

<div class="card bg-warning text-white">
    <div class="card-body">CHART OF ACCOUNT</div>
</div>
<br />

<form method="post">

    <br />


    <table class="table table-bordered">
        <thead>
            <tr>
                <th>   <a> Code </a> </th>
                <th>    <a>Title   </a> </th>
            </tr>
        </thead>
        <tbody>
            @foreach (DataRow _Record in Model.COA.MyDataTable.Rows)
            {
                <tr>
                    <td>  @_Record["ID"]     </td>
                    <td>   @_Record["Title"] </td>
                    <td>
                        <a asp-page="./COA_Edit/" asp-route-id=@_Record["ID"]>Edit</a> |
                        <a asp-page="./COA_Add" asp-route-id=@_Record>Add</a> |
                        <a asp-page="./COA_Del" asp-route-id=@_Record>Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    


</form>