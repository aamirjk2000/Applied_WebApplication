@using System.Data
@using Microsoft.AspNetCore.Identity


@model Applied_WebApplication.Pages.Accounts.COAModel
@{
}

<form method="post">
 <ul class="list-group list-group-horizontal ">
        <li class="list-group-item " style="width:92%;background-color:lavender;"  >CHART OF ACCOUNT</li>
        <li class="list-group-item" style="width:8%" >  <button class=btn-primary asp-page="./COA_Add/"> ADD </button>  </li>
    </ul>
<br />  <br />
    <table class="table table-hover">
        <thead>
            <tr>
                <th>   <a> Code </a> </th>
                <th>    <a>Title   </a> </th>
            </tr>
        </thead>
        <tbody>
            @foreach (DataRow _Record in Model.COA.MyDataTable.Rows)
            {
                <tr>
                    <td>  @_Record["Code"] </td>
                    <td>   @_Record["Title"] </td>
                    <td>
                        <a asp-page="./COA_Edit/" asp-route-id=@_Record["ID"]> Edit</a> |
                        <a asp-page="./COA_Del" asp-route-id=@_Record["ID"]>Delete </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    


</form>