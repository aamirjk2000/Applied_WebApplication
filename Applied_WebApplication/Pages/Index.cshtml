            <input type="submit" id="btn-menu" class="btn btn-primary" value="Voucher" asp-page=".\Accounts\VouchersList" formmethod="get" />
        </div>
        <div class="p-2 d-inline-block">
            <input type="submit" id="btn-menu" class="btn btn-primary" value="JV" asp-page=".\Accounts\JV" formmethod="get" />
        </div>
    </div>
</form>
