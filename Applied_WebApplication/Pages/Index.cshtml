            <input type="submit" id="btn-menu" class="btn btn-primary" value="Test" asp-page=".\Stock\OpeningStock" formmethod="get" />

        </div>

        <div class="p-2 d-inline-block">
            <input type="submit" id="btn-menu" class="btn btn-primary" value="Cash Book" asp-page-handler="CashBook" />
        </div>
        <div class="p-2 d-inline-block">
            <input type="submit" id="btn-menu" class="btn btn-primary" value="Bank Book" asp-page-handler="BankBook" />
        </div>
        <div class="p-2 d-inline-block">
            <input type="submit" id="btn-menu" class="btn btn-primary" value="Write Cheque" asp-page-handler="WCheque">
        </div>
        <div class="p-2 d-inline-block">
            <input type="submit" id="btn-menu" class="btn btn-primary" value="Issue Invoice" asp-page=".\Accounts\Invoice" />
        </div>
        <div class="p-2 d-inline-block">
            <input type="submit" id="btn-menu" class="btn btn-primary" value="Issue Receipt" asp-page=".\Accounts\Receipt" />
        </div>
        <div class="p-2 d-inline-block">
            <input type="submit" id="btn-menu" class="btn btn-primary" value="Bill Payable" asp-page=".\Accounts\BillPayableList" formmethod="get" />
        </div>
        <div class="p-2 d-inline-block">
            <input type="submit" id="btn-menu" class="btn btn-primary" value="Pay Bill" asp-page=".\Accounts\Payment" />
        </div>
        <div class="p-2 d-inline-block">
            <input type="submit" id="btn-menu" class="btn btn-primary" value="Suppliers" asp-page=".\Sales\Customers" />
