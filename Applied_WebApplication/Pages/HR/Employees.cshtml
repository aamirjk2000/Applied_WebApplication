@page
@using System.Data
@model Applied_WebApplication.Pages.HR.EmployeesModel
@{
    var UserName = User.Identity.Name;

}

<div class="AppHeading-2">

    <h5 class="TextCenter">EMPLOYEES LIST</h5>
</div>



<form method="post">
    <!-- Table of Employee List. -->
    <div class="container">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Code</th>
                    <th>Title</th>
                    <th>Designation</th>
                    <th>FullName</th>
                    <th>City</th>
                    <th>
                        <button class="btn listbutton-green"
                                asp-page-handler="Edit"
                                asp-route-id="0">
                            <i class="bi bi-database-fill-add"></i>
                        </button>

                    </th>
                </tr>
            </thead>
            <tbody>
                @if (Model.MyTable.Rows.Count > 0)
                {
                    @foreach (DataRow Row in Model.MyTable.Rows)
                    {
                        <tr>
                            <td>@Row["Code"]</td>
                            <td>@Row["Title"]</td>
                            <td>@Row["Designation"]</td>
                            <td>@Row["Full_Name"]</td>
                            <td>@Row["City"]</td>
                            <td>
                                <div class="text-center">
                                    <button class="btn listbutton-blue"
                                    asp-page-handler="Edit"
                                    asp-route-ID=@Row["ID"]>
                                        <i class="bi bi-pencil-fill "></i>
                                    </button>

                                    <button class="btn listbutton-red"
                                    asp-page-handler="Delete"
                                    asp-route-ID=@Row["ID"]>
                                        <i class="bi bi-trash3-fill"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td>No Record Found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</form>