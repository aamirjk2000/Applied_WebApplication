@page
@model Applied_WebApplication.Pages.Sales.Customer_AddModel
@{

    DataTableClass Customers = new(Tables.Customers.ToString());
    DataTableClass City = new(Tabless.City.ToString());


}

<div class="container bg-sucess g-4 p-1">
    <h3>CUSTOMER - ADD</h3>
</div>
<br />


<div class="col-md-7 col-lg-8">
    <form class="needs-validation" novalidate="">
        <div class="row g-3">
            <div class="col-sm-6">
                <label for="firstName" class="form-label">ID</label>
                <input type="text" class="form-control" id="ID" placeholder="" value="" required="">
                <div class="invalid-feedback">
                    Valid first name is required.
                </div>
            </div>

            <div class="col-sm-6">
                <label for="lastName" class="form-label">Code</label>
                <input type="text" class="form-control" id="Code" placeholder="" value="" required="">
                <div class="invalid-feedback">
                    Valid last name is required.
                </div>
            </div>

            <div class="col-12">
                <label for="username" class="form-label">Customer Name</label>
                <div class="input-group has-validation">
                    <span class="input-group-text">@Customers.MyTableName</span>
                    <input type="text" class="form-control" id="username" placeholder="Username" required="">
                    <div class="invalid-feedback">
                        Your username is required.
                    </div>
                </div>
            </div>

            <div class="col-12">
                <label for="email" class="form-label">Email <span class="text-muted">(Optional)</span></label>
                <input type="email" class="form-control" id="email" placeholder="you@example.com">
                <div class="invalid-feedback">
                    Please enter a valid email address for shipping updates.
                </div>
            </div>

            <div class="col-12">
                <label for="address" class="form-label">Address</label>
                <input type="text" class="form-control" id="address" placeholder="Please address Plot, House and Area." required="">
            </div>

            <div class="col-12">
                <label for="address2" class="form-label">Address 2 <span class="text-muted"></span></label>
                <input type="text" class="form-control" id="address2" placeholder="please enter Block, Phase, Sector of Area ">
            </div>

            <div class="col-md-3">
                <label for="zip" class="form-label">City</label>
                <input type="text" class="form-control" id="City" placeholder="Enter City Name" required="">
                <div class="invalid-feedback">
                    City name is required.
                </div>
            </div>

              <div class="col-md-4">
                <label for="zip" class="form-label">Provience</label>
                <input type="text" class="form-control" id="City" placeholder="Enter City Name" required="">
                <div class="invalid-feedback">
                    Provience / State name is required.
                </div>
            </div>
            
            <div class="col-md-5">
                <label for="country" class="form-label">Country</label>
                <select class="form-select" id="country" required="">
                    <option value="">Choose...</option>
                    <option>Pakistan</option>
                    <option>United Arab Emirates</option>
                    <option>Saudia Arabia</option>
                    <option>Qatar</option>
                    <option>Bahrain</option>
                    <option>Oman</option>
                    <option>United Kingdom</option>
                    <option>United States</option>
                    <option>Caneda</option>
                    <option>Other Country</option>
                </select>
                <div class="invalid-feedback">
                    Please select a valid country.
                </div>
            </div>




        </div>
        <button class="w-100 btn btn-primary btn-lg g-2" type="submit">Continue to checkout</button>
    </form>
</div>

